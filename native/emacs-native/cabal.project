packages:
  emacs-native.cabal
  ../rure-ffi/rure-ffi.cabal

constraints:
  , prettyprinter-combinators -enummapset

allow-newer:
  , boring:base

constraints:
  , emacs-native +standalone-foreign-lib

-- -fPIC is not needed on Windows. Itâ€™s supposed to be a no-op but
-- actually leads to segfaults, cf
-- https://gitlab.haskell.org/ghc/ghc/-/issues/24016.
if !os(windows)
  package *
    ghc-options:
      -fPIC