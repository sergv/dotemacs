# key: library
# key: lib
# name: library section
# --
library
  exposed-modules:
    ${1:Foo}
  other-modules:
    ${2:Utils.Utils}
${3:  hs-source-dirs:
    ${4:src}
}  build-depends:
    base >= 4.7
  default-language:
    Haskell2010
  ghc-options:
    -Wall
    -fno-warn-type-defaults
    -fno-warn-name-shadowing
  if impl(ghc >= 8.0)
    ghc-options:
      -Wcompat
${5:  build-tools:
    ${6:alex happy c2hs}}
  ghc-prof-options:
    -fprof-auto
