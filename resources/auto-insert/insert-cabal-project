packages:
  foo.cabal
  ../bar.cabal

-- Uncomment to allow picking up extra local unpacked deps:
--optional-packages: */

allow-newer:
  , foo:base
  , bar:text

constraints:
  , foo >= 0.2
  , bar +assertions

-- optimization: 2

-- Sperify options for all packages
program-options
  -- alex-options: --debug
  ld-options: -fuse-ld=lld
  ghc-options:
    -- -O2
    -fprint-potential-instances
    -- 'lld' links even faster than 'gold' so it makes sense to use it instead.
    -- cf. https://stackoverflow.com/questions/43243322/how-to-link-with-the-gnu-gold-linker-instead-of-ld-in-haskell/43243323#43243323
    -pgmP=clang
    -optP=-E
    -optP=-undef
    -optP=-traditional
    -pgmc=clang
    -pgma=clang
    -pgml=clang
    -optl-fuse-ld=lld

