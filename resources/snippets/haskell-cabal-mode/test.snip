# key: test
# name: test section
# --
test-suite ${1:test-name}
  import: ghc-options
  type:
    exitcode-stdio-1.0
  main-is:
    test/${2:${1:$(haskell-cabal--yasnippet--main-module-from-executable-name yas-text)}}.hs
${3:  other-modules:
    ${4:Other.Module}
}${5:  hs-source-dirs:
    .
    test
}  build-depends:
    , QuickCheck
    , base ^>= 4.14
    , optparse-applicative
    , tasty
    , tasty-hunit
    , tasty-quickcheck
    , ${6:my-package}
  ghc-options:
    -rtsopts
    -- -threaded
    -- "-with-rts-opts=-N -A32M"
    -main-is ${2:$(haskell-cabal--yasnippet--main-module-from-main-file yas-text)}
