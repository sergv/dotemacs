# key: test
# name: test section
# --
test-suite ${1:test-name}
  type:
    exitcode-stdio-1.0
  main-is:
    ${2:tests/Main.hs}
  build-depends:
    HUnit,
    QuickCheck,
    base,
    tasty,
    tasty-hunit,
    tasty-quickcheck,
    ${3:my-package}
${4:  hs-source-dirs:
    ${5:tests}}
  default-language:
    Haskell2010
  ghc-options:
    -Wall
    -fwarn-name-shadowing
    -fno-warn-type-defaults
    -rtsopts
    ${6:-main-is ${2:$(replace-regexp-in-string "^\\(?:.*/\\)?\\([^/]+\\)$" "\\1" (file-name-sans-extension yas-text))}}
  if impl(ghc >= 8.0)
    ghc-options:
      -Wcompat
  ghc-prof-options:
    -fprof-auto
